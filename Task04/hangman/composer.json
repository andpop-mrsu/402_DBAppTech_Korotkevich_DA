{
    "name": "dmitriykorotkevich/hangman",
    "description": "Console game \"Виселица\" (Hangman) with SQLite database",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "DmitriyKorotkevich\\Hangman\\": "src/"
        }
    },
    "bin": [
        "bin/hangman"
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "wp-cli/php-cli-tools": "^0.12.6"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^4.0"
    },
    "scripts": {
        "cs-check": "phpcs --standard=PSR12 src/ bin/hangman",
        "cs-fix": "phpcbf --standard=PSR12 src/ bin/hangman",
        "db-init": "php -r \"require 'vendor/autoload.php'; \\DmitriyKorotkevich\\Hangman\\Models\\Database::getConnection(); echo 'Database initialized!';\""
    },
    "authors": [
        {
            "name": "Dmitriy Korotkevich",
            "email": "githubdmitriy@gmail.com"
        }
    ],
    "version": "1.3.0"
}
